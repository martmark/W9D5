<h1><%= @band.name %></h1>

<ul>
<% @band.albums.each do |album| %>
 <li>
   <a href="<%= album_url(album) %>"><%= album.title %></a>
 </li>
<% end %>
</ul>

<ul>
  <li>
   <a href="<%= new_band_album_url(@band) %>">Add Album</a>
 </li>
 <li>
   <a href="<%= edit_band_url(@band) %>">Edit Band</a>
 </li>
 <li>
   <form action="<%= band_url(@band) %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>%">
      <input type="submit" value="Destroy Band">
    </form>
 </li>
 <li>
   <a href="<%= bands_url %>">All Bands</a>
 </li>
</ul>